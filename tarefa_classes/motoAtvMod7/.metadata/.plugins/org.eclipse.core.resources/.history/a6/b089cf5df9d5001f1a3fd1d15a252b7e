package br.com.mont;

public class moto {
	
	//atributos
	String piloto;
	boolean ignicion;
	int vel;
	int marcha;
	
	//mÃ©todos
	void ligar() {
		ignicion = true;
		return ignicion;
	}
	void acelerar(int aceleracao) {
		if (ignicion == true) {
			vel+=aceleracao;
		}
	}
	
	void freiar(int reduzir) {
		vel-=reduzir;
	}
	
	void trocarMarcha() {
		if (vel > 0 && vel <20) {
			marcha = 1;
		}else if (vel < 40) {
			marcha = 2;
		}else if (vel < 60) {
			marcha = 3;
		}else if (vel < 80) {
			marcha = 4;
		}else {
			marcha = 5;
		}
	}
}
